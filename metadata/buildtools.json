[
  {
    "id": "maven",
    "file": "pom.xml",
    "url": "https://maven.apache.org",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Maven Group Id", "prefill": "com.example" },
      { "key": "artifactId", "label": "Maven Artifact Id", "prefill": "myapp" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" },
      { "key": "graalNativeImage", "label": "(Experimental!) native image support (requires: GraalVM)", "type": "checkbox" }
    ],
    "languages": [
      {
        "id": "java",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "verticle/src/main/java/{packageDir}/MainVerticle.java"
        ]
      },
      {
        "id": "groovy",
        "main": "main_verticle.groovy",
        "templates": [
          "verticle/src/main/resources/main_verticle.groovy"
        ]
      },
      {
        "id": "ruby",
        "main": "main_verticle.rb",
        "templates": [
          "verticle/src/main/resources/main_verticle.rb"
        ]
      },
      {
        "id": "kotlin",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "verticle/src/main/kotlin/{packageDir}/MainVerticle.kt"
        ]
      },
      {
        "id": "js",
        "main": "main_verticle.js",
        "templates": [
          "verticle/src/main/resources/main_verticle.js"
        ]
      }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "maven/pom.xml"
    ],
    "graalNativeImageTemplates": [
      "graal-nativeimage/src/main/svm/reflection.json",
      "graal-nativeimage/src/main/svm/substitutions.java"
    ],
    "blob": "mvnw.zip",
    "executables": [
      "mvnw"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "gradle",
    "url": "https://gradle.org",
    "file": "build.gradle",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Project Group", "prefill": "com.example" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "verticle/src/main/java/{packageDir}/MainVerticle.java"
        ]
      },
      {
        "id": "groovy",
        "main": "main_verticle.groovy",
        "templates": [
          "verticle/src/main/resources/main_verticle.groovy"
        ]
      },
      {
        "id": "ruby",
        "main": "main_verticle.rb",
        "templates": [
          "verticle/src/main/resources/main_verticle.rb"
        ]
      },
      {
        "id": "kotlin",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "verticle/src/main/kotlin/{packageDir}/MainVerticle.kt"
        ]
      },
      {
        "id": "js",
        "main": "main_verticle.js",
        "templates": [
          "verticle/src/main/resources/main_verticle.js"
        ]
      }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "gradle/build.gradle"
    ],
    "blob": "gradlew.zip",
    "executables": [
      "gradlew"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "npm",
    "url": "https://npmjs.com",
    "file": "package.json",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1" }
    ],
    "languages": [
      {
        "id": "js",
        "noLangSupport": true,
        "main": "index.js",
        "templates": [
          "npm/index.js"
        ]
      },
      {
        "id": "typescript",
        "noLangSupport": true,
        "main": "index.js",
        "templates": [
          "npm/tsconfig.json",
          "npm/index.ts"
        ]
      }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "npm/package.json"
    ],
    "blob": "blobs/mvnw.zip",
    "executables": [
      "mvnw"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },
  {
    "id": "SBT",
    "url": "http://www.scala-sbt.org",
    "non-core-suffix": "-scala_2.12",
    "file": "build.sbt",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Project Group", "prefill": "com.example" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "scala",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "sbt/src/main/scala/{packageDir}/MainVerticle.scala"
        ]
      }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "sbt/.scalafmt",
      "sbt/build.sbt",
      "sbt/project/build.properties",
      "sbt/project/Build.scala",
      "sbt/project/plugins.sbt"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-lang-scala_2.12"
    ]
  },

  {
    "id": "stack",
    "url": "http://vertx.io/docs/#advanced",
    "file": "vertx-stack.json",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "stack/vertx-stack.json"
    ],
    "blob": "stack-min.zip",
    "defaults": [
      "io.vertx:vertx-core"
    ],
    "languages": [
      {
        "id": "js",
        "main": "main-server.js"
      }
    ]
  }
]
