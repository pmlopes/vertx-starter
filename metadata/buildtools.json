[
  {
    "id": "maven",
    "file": "pom.xml",
    "url": "https://maven.apache.org",
    "icon": "apache.png",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Maven Group Id", "prefill": "com.example" },
      { "key": "artifactId", "label": "Maven Artifact Id", "prefill": "myapp" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" },
      { "key": "graalNativeImage", "label": "GraalVM native-image", "type": "checkbox" }
    ],
    "meta": [
      { "key": "bom", "value": "3.6.3" },
      { "key": "graalVersion", "value": "1.0.0-rc11" }
    ],
    "languages": [
      {
        "id": "java",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "verticle/src/main/java/{packageDir}/MainVerticle.java"
        ]
      },
      {
        "id": "groovy",
        "main": "main_verticle.groovy",
        "templates": [
          "verticle/src/main/resources/main_verticle.groovy"
        ]
      },
      {
        "id": "ruby",
        "main": "main_verticle.rb",
        "templates": [
          "verticle/src/main/resources/main_verticle.rb"
        ]
      },
      {
        "id": "kotlin",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "verticle/src/main/kotlin/{packageDir}/MainVerticle.kt"
        ]
      }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "maven/pom.xml"
    ],
    "graalNativeImageTemplates": [
      "graal-nativeimage/Dockerfile",
      "graal-nativeimage/README.md",
      "graal-nativeimage/src/main/java/SVMSubstitutions.java",
      "graal-nativeimage/src/main/resources/META-INF/native-image/io.vertx/vertx-core/native-image.properties",
      "graal-nativeimage/src/main/resources/META-INF/native-image/io.vertx/vertx-core/reflection.json"
    ],
    "blob": "mvnw.zip",
    "executables": [
      "mvnw"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "gradle",
    "url": "https://gradle.org",
    "file": "build.gradle",
    "icon": "gradle.svg",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Project Group", "prefill": "com.example" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "meta": [
      { "key": "plugin", "value": "0.3.1" },
      { "key": "bom", "value": "3.6.3" }
    ],
    "languages": [
      {
        "id": "java",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "verticle/src/main/java/{packageDir}/MainVerticle.java"
        ]
      },
      {
        "id": "groovy",
        "main": "main_verticle.groovy",
        "templates": [
          "verticle/src/main/resources/main_verticle.groovy"
        ]
      },
      {
        "id": "ruby",
        "main": "main_verticle.rb",
        "templates": [
          "verticle/src/main/resources/main_verticle.rb"
        ]
      },
      {
        "id": "kotlin",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "verticle/src/main/kotlin/{packageDir}/MainVerticle.kt"
        ]
      }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "gradle/build.gradle"
    ],
    "blob": "gradlew.zip",
    "executables": [
      "gradlew"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "npm",
    "url": "https://npmjs.com",
    "file": "package.json",
    "icon": "npm.svg",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1" }
    ],
    "meta": [
      { "key": "es4x", "value": "0.7.2" }
    ],
    "languages": [
      {
        "id": "js",
        "noLangSupport": true,
        "main": "index.js",
        "templates": [
          "npm/index.js"
        ]
      },
      {
        "id": "typescript",
        "noLangSupport": true,
        "main": "index.js",
        "templates": [
          "npm/tsconfig.json",
          "npm/index.ts"
        ]
      }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "npm/package.json",
      "npm/README.md"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-unit"
    ]
  },
  {
    "id": "SBT",
    "url": "http://www.scala-sbt.org",
    "non-core-suffix": "-scala_2.12",
    "file": "build.sbt",
    "icon": "scala.png",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Project Group", "prefill": "com.example" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "meta": [
      { "key": "bom", "value": "3.6.3" }
    ],
    "languages": [
      {
        "id": "scala",
        "var_templates": {
          "main": "{package}.MainVerticle"
        },
        "templates": [
          "sbt/src/main/scala/{packageDir}/MainVerticle.scala",
          "sbt/src/test/scala/{packageDir}/VerticleTesting.scala",
          "sbt/src/test/scala/{packageDir}/MainVerticleSpec.scala"
        ]
      }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "sbt/README.md",
      "sbt/build.sbt",
      "sbt/project/build.properties",
      "sbt/project/Build.scala",
      "sbt/project/Docker.scala",
      "sbt/project/plugins.sbt"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-lang-scala_2.12",
      "io.vertx:vertx-web"
    ]
  },

  {
    "id": "stack",
    "url": "http://vertx.io/docs/#advanced",
    "file": "vertx-stack.json",
    "icon": "stack.svg",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true }
    ],
    "templates": [
      "git/.gitignore",
      "editorconfig/.editorconfig",
      "stack/vertx-stack.json"
    ],
    "blob": "stack-min.zip",
    "defaults": [
      "io.vertx:vertx-core"
    ],
    "languages": [
      {
        "id": "js",
        "main": "main-server.js"
      }
    ]
  }
]
