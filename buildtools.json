[
  {
    "id": "maven",
    "file": "pom.xml",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Maven Group Id", "prefill": "com.example" },
      { "key": "artifactId", "label": "Maven Artifact Id", "prefill": "demo" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "templates": [
          "maven/src/main/java/{package}/MainVerticle.java"
        ]
      },
      {
        "id": "groovy",
        "templates": [
          "maven/src/main/resources/main.groovy"
        ]
      },
      {
        "id": "ruby",
        "templates": [
          "maven/src/main/resources/main.rb"
        ]
      },
      {
        "id": "kotlin",
        "templates": [
          "maven/src/main/kotlin/{package}/MainVerticle.kt"
        ]
      }
    ],
    "templates": [
      "maven/.gitignore",
      "maven/pom.xml"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "gradle",
    "file": "build.gradle",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Project Group", "prefill": "com.example" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "templates": [
          "maven/src/main/java/{package}/MainVerticle.java"
        ]
      },
      {
        "id": "groovy",
        "templates": [
          "maven/src/main/resources/main.groovy"
        ]
      },
      {
        "id": "ruby",
        "templates": [
          "maven/src/main/resources/main.rb"
        ]
      }
    ],
    "templates": [
      "gradle/.gitignore",
      "gradle/build.gradle"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "npm",
    "file": "package.json",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1" }
    ],
    "languages": [
      {
        "id": "javascript",
        "templates": [
          "npm/src/main.js"
        ]
      }
    ],
    "templates": [
      "npm/.gitignore",
      "npm/webpack.config.js",
      "npm/package.json"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-lang-js"
    ]
  },

  {
    "id": "stack",
    "file": "vertx-stack.json",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true }
    ],
    "templates": [
      "stack/vertx-stack.json"
    ],
    "blob": "blobs/stack-min.zip",
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

    {
    "id": "sbt",
    "file": "build.sbt",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Maven Group Id", "prefill": "com.example" },
      { "key": "artifactId", "label": "Maven Artifact Id", "prefill": "demo" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "scala",
        "templates": [
          "maven/src/main/scala/{package}/MainVerticle.scala",
          "maven/src/test/scala/{package}/MainVerticleTest.scala",
          "maven/src/test/scala/{package}/TestVerticle.scala",
          "maven/src/test/scala/{package}/TestVerticleTest.scala"
        ]
      }
    ],
    "templates": [
      "project/Build.scala",
      "project/plugins.sbt",
      "project/build.properties",
      "project/Dependencies.scala",
      ".scalafmt",
      ".gitignore",
      "README.md",
      "src/test/resources/.gitkeep",
      "src/main/resources/vertx-default-jul-logging.properties",
      "build.sbt"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-codegen",
      "io.vertx:vertx-lang-scala",
      "io.vertx:vertx-web-scala"
    ]
  }
]
